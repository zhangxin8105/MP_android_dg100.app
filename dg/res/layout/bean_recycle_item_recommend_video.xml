<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:paddingBottom="18.0dip" >

    <ImageView
        android:id="@id/iv_cover"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="0.0dip" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="25.0dip"
        app:layout_constraintBottom_toBottomOf="@id/iv_cover"
        android:background="@drawable/ic_shadow_cover" />

    <TextView
        android:id="@id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/homepage_recycle_grade_around"
        android:layout_marginEnd="6.0dip"
        android:layout_marginStart="6.0dip"
        app:layout_constraintBottom_toBottomOf="@id/iv_cover"
        app:layout_constraintEnd_toEndOf="parent"
        android:ellipsize="end"
        android:gravity="end|center"
        android:singleLine="true"
        android:textColor="#ffffad43"
        android:textSize="@dimen/text_size_12sp" />

    <TextView
        android:id="@id/tv_main_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5.0dip"
        android:layout_marginTop="10.0dip"
        app:layout_constraintTop_toBottomOf="@id/iv_cover"
        android:ellipsize="end"
        android:gravity="start|center|top"
        android:includeFontPadding="false"
        android:paddingEnd="12.0dip"
        android:paddingStart="12.0dip"
        android:singleLine="true"
        android:textColor="@color/homepage_font_main_title"
        android:textSize="@dimen/text_size_15sp" />

    <TextView
        android:id="@id/tv_sub_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_main_title"
        android:ellipsize="end"
        android:gravity="start|center|top"
        android:includeFontPadding="false"
        android:paddingEnd="12.0dip"
        android:paddingStart="12.0dip"
        android:singleLine="true"
        android:textColor="@color/videoList_background_sub_title"
        android:textSize="@dimen/text_size_13sp" />

</android.support.constraint.ConstraintLayout>
